<div id="jp_container_1" class="jp-video">
    <div class="jp-type-single">
        <div id="jquery_jplayer_1" class="jp-jplayer">
            {% for key, video in videos %}
                <div class="source" data-src="{{ video.file }}" data-video-type="{{ video.type }}"></div>
            {% endfor %}
        </div>
        <div class="jp-gui">
            <div class="jp-video-play">
                <a href="javascript:;" class="jp-video-play-icon" tabindex="1">{{ trans('jplayer:play', plugin) }}</a>
            </div>
            <div class="jp-interface">
                <div class="jp-progress">
                    <div class="jp-seek-bar">
                        <div class="jp-play-bar"></div>
                    </div>
                </div>
                <div class="jp-current-time"></div>
                <div class="jp-duration"></div>
                <div class="jp-controls-holder">
                    <ul class="jp-controls">
                        <li><a href="javascript:;" class="jp-play" tabindex="1" title="{{ trans('jplayer:play', plugin) }}">{{ trans('jplayer:play', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-pause" tabindex="1" title="{{ trans('jplayer:pause', plugin) }}">{{ trans('jplayer:pause', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-stop" tabindex="1" title="{{ trans('jplayer:stop', plugin) }}">{{ trans('jplayer:stop', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-mute" tabindex="1" title="{{ trans('jplayer:mute', plugin) }}">{{ trans('jplayer:mute', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-unmute" tabindex="1" title="{{ trans('jplayer:unmute', plugin) }}">{{ trans('jplayer:unmute', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-volume-max" tabindex="1" title="{{ trans('jplayer:maxvolume', plugin) }}">{{ trans('jplayer:maxvolume', plugin) }}</a></li>
                    </ul>
                    <div class="jp-volume-bar">
                        <div class="jp-volume-bar-value"></div>
                    </div>
                    <ul class="jp-toggles">
                        <li><a href="javascript:;" class="jp-full-screen" tabindex="1" title="{{ trans('jplayer:fullscreen', plugin) }}">{{ trans('jplayer:fullscreen', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-restore-screen" tabindex="1" title="{{ trans('jplayer:restorescreen', plugin) }}">{{ trans('jplayer:restorescreen', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-repeat" tabindex="1" title="{{ trans('jplayer:repeat', plugin) }}">{{ trans('jplayer:repeat', plugin) }}</a></li>
                        <li><a href="javascript:;" class="jp-repeat-off" tabindex="1" title="{{ trans('jplayer:repeatoff', plugin) }}">{{ trans('jplayer:repeatoff', plugin) }}</a></li>
                    </ul>
                </div>
                <div class="jp-title">
                    <ul>
                        {% verbatim %}<li>{{ title }}</li>{% endverbatim %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="jp-no-solution">
            <span>Update Required</span>
            To play the media you will need to either update your browser to a recent version or update your <a href="http://get.adobe.com/flashplayer/" target="_blank">Flash plugin</a>.
        </div>
    </div>
</div>